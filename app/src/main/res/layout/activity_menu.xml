<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:background="@drawable/backgroundmain"
    android:gravity="center"
    tools:context="com.example.dan_p.nonogrammaker.activities.MenuActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/gameName"
        android:id="@+id/textTitleGameName"
        android:textColor="#AA000000"
        android:textAlignment="center"
        android:textSize="45sp"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginBottom="15dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Play"
            android:id="@+id/button_play"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/menuradiobuttonred"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="50sp"
            android:textStyle="normal|bold"
            android:layout_margin="5dp"
            android:textColor="#99000000" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create"
            android:id="@+id/button_create"
            android:background="@drawable/menuradiobuttonorange"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="40dp"
            android:paddingTop="40dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="50sp"
            android:textStyle="normal|bold"
            android:layout_margin="5dp"
            android:textColor="#99000000" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Statistics"
            android:id="@+id/button_progression"
            android:background="@drawable/menuradiobutton"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:layout_margin="5dp" />

    </LinearLayout>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_user_login_id"
        android:gravity="right"
        android:textStyle="normal|italic"
        android:textAlignment="center" />


</LinearLayout>
